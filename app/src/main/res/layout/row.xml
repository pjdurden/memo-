<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="#212121"
                                    app:cardCornerRadius="1dp"
                                    app:cardElevation="1dp"
                                    app:cardUseCompatPadding="true">
    <ImageButton
            android:id="@+id/editBtn"
            android:layout_width="411dp"
            android:layout_height="96dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="end|bottom"
            android:orientation="vertical">

        <TextView
                android:id="@+id/titleTv"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Title"
                android:textColor="#99A3A4 "
                android:textSize="20dp"
                android:padding="5dp"
                android:textStyle="bold" android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:background="#424242"/>

        <TextView
                android:id="@+id/descTv"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="69dp"
                android:text="There may be a very long description of a memo"
                android:textSize="14dp" android:textColor="#FFFFFF"
                android:background="#303030" android:layout_marginTop="2dp" android:layout_marginBottom="2dp"
        />

        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="end"
                android:orientation="horizontal" android:background="#212121">


            <ImageButton
                    android:id="@+id/deleteBtn"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:src="@drawable/ic_action_delete"/>

            <ImageButton
                    android:id="@+id/copyBtn"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:src="@drawable/ic_action_copy"/>

            <ImageButton
                    android:id="@+id/shareBtn"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:src="@drawable/ic_action_share"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>