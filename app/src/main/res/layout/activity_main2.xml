<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.memo.Main2Activity" android:background="#000000">
    <View
            android:layout_width="352dp"
            android:layout_height="635dp" android:id="@+id/view"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:background="#161616"/>
    <ImageView
            android:layout_width="148dp"
            android:layout_height="135dp" app:srcCompat="@mipmap/ic_iamge" android:id="@+id/imageView2"
            android:background="#161616"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view" app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintBottom_toBottomOf="@+id/view" app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintVertical_bias="0.218"/>
    <TextView
            android:text="@string/about2"
            android:layout_width="273dp"
            android:layout_height="wrap_content" android:id="@+id/textView" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:autoLink="web"

            android:textColor="#FFFFFF" android:textColorLink="#03DAC6"
            android:textSize="16dp" android:padding="15dp" app:layout_constraintBottom_toBottomOf="@+id/view"
            android:layout_marginBottom="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.203"/>
</android.support.constraint.ConstraintLayout>
